<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_sos_logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="50dp"
            android:contentDescription="@string/logo_img"
            android:src="@drawable/bgground" />


        <EditText
            android:padding="10dp"
            android:textSize="15sp"
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/editext_white_bg"
            android:drawableStart="@drawable/ic_envelope"
            android:drawableLeft="@drawable/ic_envelope"
            android:drawablePadding="15dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:padding="10dp"
            android:textSize="15sp"
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/editext_white_bg"
            android:drawableStart="@drawable/ic_padlock"
            android:drawableLeft="@drawable/ic_padlock"
            android:drawablePadding="15dp"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:background="@drawable/btn"
            android:onClick="LoginMethod"
            android:text="login"
            android:textColor="#fff" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Don't have any account?"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:onClick="gotoSignupActivity"
                android:padding="10dp"
                android:scaleType="center"
                android:text="Signup now"
                android:textAlignment="center"
                android:textColor="#03A9F4"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>