<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_pic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/logo_img"
        android:src="@drawable/bgground" />


    <EditText
        android:textSize="15sp"
        android:id="@+id/update_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/editext_white_bg"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="15dp"
        android:hint="First name"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_user"
        android:padding="10dp"/>


    <EditText
        android:textSize="15sp"
        android:id="@+id/update_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/editext_white_bg"
        android:drawableStart="@drawable/ic_user"
        android:drawableLeft="@drawable/ic_user"
        android:padding="10dp"
        android:drawablePadding="15dp"
        android:hint="Last name"
        android:inputType="textEmailAddress" />


    <EditText
        android:textSize="15sp"
        android:id="@+id/update_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/editext_white_bg"
        android:drawableStart="@drawable/ic_envelope"
        android:drawablePadding="15dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_envelope"
        android:padding="10dp"/>


    <EditText
        android:padding="10dp"
        android:textSize="15sp"
        android:id="@+id/update_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/editext_white_bg"
        android:drawableStart="@drawable/ic_padlock"
        android:drawablePadding="15dp"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_padlock" />


    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="3">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/green_btn"
            android:onClick="saveProfileMethod"
            android:text="Save"
            android:textColor="#fff" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25" />

        <Button
            android:id="@+id/delete_Profile_Button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/red_btn"
            android:onClick="deleteProfileMethod"
            android:text="Delete"
            android:textColor="#fff"

            />
    </LinearLayout>


</LinearLayout>